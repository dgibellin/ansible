---
- name: Backup configuration files
  hosts: your_hosts_group
  become: yes

  vars:
    backup_dir: "/tmp"

  tasks:
    - name: Ensure backup directory exists
      file:
        path: "{{ backup_dir }}"
        state: directory
        owner: root
        group: root
        mode: '0755'

    - name: Backup /etc/krb5.conf
      copy:
        src: /etc/krb5.conf
        dest: "{{ backup_dir }}/krb5.conf.bak"
        owner: root
        group: root
        mode: '0644'

    - name: Backup /etc/hosts
      copy:
        src: /etc/hosts
        dest: "{{ backup_dir }}/hosts.bak"
        owner: root
        group: root
        mode: '0644'

    - name: Backup /etc/resolv.conf
      copy:
        src: /etc/resolv.conf
        dest: "{{ backup_dir }}/resolv.conf.bak"
        owner: root
        group: root
        mode: '0644'

    - name: Backup /etc/sssd/sssd.conf
      copy:
        src: /etc/sssd/sssd.conf
        dest: "{{ backup_dir }}/sssd.conf.bak"
        owner: root
        group: root
        mode: '0644'
